apiVersion: v1
kind: Secret
metadata:
  name: kubernetes-agent
type: Opaque
stringData:
  # Profile selection - set to 'prod,openai' or 'prod,gemini' to switch models
  # Default is 'prod,gemini' if not specified
  quarkus_profile: "prod,openai"
  
  # OpenAI Configuration (required when using openai profile)
  openai_api_key: "YOUR_OPENAI_API_KEY"
  openai_base_url: "https://api.openai.com/v1"  # Can be overridden for custom endpoints
  openai_model: "gpt-4o"
  
  # Gemini Configuration (required when using gemini profile)
  google_api_key: "YOUR_GOOGLE_API_KEY"
  gemini_model: "gemini-2.5-flash"  # Optional, defaults to gemini-2.5-flash
  
  # GitHub Configuration (required for PR creation)
  github_token: "YOUR_GITHUB_TOKEN"
  
  # Google Cloud Configuration (optional)
  google_cloud_project: "YOUR_GOOGLE_CLOUD_PROJECT"
